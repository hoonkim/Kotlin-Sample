<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.testapplication.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_destFragment"
            app:destination="@id/destFragment" />
    </fragment>
    <fragment
        android:id="@+id/destFragment"
        android:name="com.example.testapplication.ui.main.DestFragment"
        android:label="dest_fragment"
        tools:layout="@layout/dest_fragment" >
        <argument
            android:name="lastNumber"
            app:argType ="integer"
            android:defaultValue="-1" />
    </fragment>
</navigation>